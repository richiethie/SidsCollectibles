# Shopify Storefront API
SHOPIFY_STOREFRONT_API_ACCESS_TOKEN=your_storefront_access_token_here
SHOPIFY_STORE_DOMAIN=your-store.myshopify.com

# Shopify Admin API (for server-side operations only)
SHOPIFY_ADMIN_API_ACCESS_TOKEN=your_admin_access_token_here
SHOPIFY_API_VERSION=2024-01

SHOPIFY_APP_API_KEY=enterinfohere
SHOPIFY_APP_API_SECRET_KEY=enterinfohere

# Email Configuration (for repair requests)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password_here

# App Configuration
NEXT_PUBLIC_SITE_URL=http://localhost:3000
NODE_ENV=development
